{
  "python.analysis.typeCheckingMode": "off",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wrappingIndent": "same",
  "editor.wordWrapColumn": 120,
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": true,
  "css.validate": false,
  // "python.formatting.provider": "none",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  //custom config for python
  // "python.formatting.autopep8Args": [
  //   "--max-line-length",
  //   "120",
  //   "--experimental"
  // ],
  "python.testing.unittestArgs": ["-v", "-s", ".", "-p", "*_test.py"],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "editor.tokenColorCustomizations": {
    "[Monokai]": {
      "textMateRules": [
        {
          "scope": "entity.name.namespace",
          "settings": {
            "fontStyle": "italic underline",
            "foreground": "#82b8dd"
          }
        },
        {
          "scope": "variable.other.readwrite",
          "settings": {
            "fontStyle": "italic",
            "foreground": "#d3bebe"
          }
        },
        {
          "scope": "keyword.control.import",
          "settings": {
            "fontStyle": "italic underline",
            "foreground": "#F92672"
          }
        },
        {
          "scope": "entity.name.function",
          "settings": {
            "foreground": "#99d381"
          }
        },
        {
          "scope": "variable.other.constant",
          "settings": {
            "fontStyle": "italic underline",
            "foreground": "#c581d3"
          }
        },
        {
          "scope": "variable.other.property",
          "settings": {
            "fontStyle": "italic underline",
            "foreground": "#ff1865"
          }
        },
        {
          "scope": "meta.function-call.python",
          "settings": {
            "foreground": "#99d381"
          }
        },
        {
          "scope": "meta.attribute.python",
          "settings": {
            "foreground": "#ca78ca"
          }
        }
      ]
    }
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "python.analysis.extraPaths": ["./projects"],
  "git.ignoreLimitWarning": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ini]": {
    "editor.defaultFormatter": "lkrms.inifmt"
  },
  "DockerRun.DisableDockerrc": true,
  // "markdownlint.config": {
  //   "no-inline-html": false
  // }
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.gitignore": true,
    "**/.gitattributes": true
  },
  "explorer.compactFolders": false,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "workbench.settings.applyToAllProfiles": ["editor.fontFamily"],
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "vscode-icons",
  "dateTime.displayPrefix": "",
  "dateTime.locale": "vi",
  "dateTime.showSeconds": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "git.enableSmartCommit": true,
  "explorer.confirmDelete": false,
  "editor.accessibilitySupport": "off",
  "cmake.showOptionsMovedNotification": false,
  "explorer.confirmDragAndDrop": false,
  "mssql.objectExplorer.groupBySchema": false,
  "mssql.connections": [],
  "notebook.lineNumbers": "on",
  "workbench.colorCustomizations": {},
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "notebook.output.wordWrap": true,
}
